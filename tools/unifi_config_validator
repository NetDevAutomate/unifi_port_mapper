#!/usr/bin/env bash
# UniFi Configuration Validator CLI wrapper
# Validates network configuration against best practices

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

cd "$PROJECT_ROOT"

# Check for virtual environment
if [ -d ".venv" ]; then
    source .venv/bin/activate
fi

# Run the validator
python -m src.scripts.unifi_config_validator "$@"
